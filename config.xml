<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ariol.Sport3go" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>3go</name>
    <description>
        Спортивное приложение
    </description>
    <author email="info@ariol.by" href="http://ariol.by">
        Ariol
    </author>
    <content src="index.html" />
    <access origin="http://youtube.com" subdomains="true" />
    <access origin="http://ytimg.com" subdomains="true"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
